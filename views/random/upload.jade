extends ../hub/layout

block content
    h2 Upload random
    form(method="POST", action="/b/upload", enctype="multipart/form-data")
        p
            input(placeholder="name", name="name")
        p
            input(placeholder="description", name="description")
        p
            label(for='is_private') Make private: 
            input#is_private(type="checkbox", name="private")
        p
            label(for='is_unlisted') Make unlisted: 
            input#is_unlisted(type="checkbox", name="unlisted")
        p
            label(for='is_restricted') Make logged in users only: 
            input#is_restricted(type="checkbox", name="restricted")
        p
            input(type="file", name="file")
        p
            input(type="submit", value="Upload")
